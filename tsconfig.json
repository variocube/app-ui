{
  "compilerOptions": {
    "moduleResolution": "node",
    "sourceMap": true,
    "module": "esnext",
    "target": "ES6",
    "outDir": "./esm",
    "declaration": true,
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "src/**/*.spec.ts",
  ]
}